{{#each posts as |post|}}
      <div class="container-fluid">
        <div class="col">
          <div class="card m-3" data-post="{{post.id}}">
            <div class="card-header" style="background-color: #1c97cf">
                <span class="fs-3"><strong>{{post.title}}</strong></span>
                <br>
                <span class="text-end fs-6">Posted by {{user.name}} on {{format_date post.date_created}}</span>
            </div>
            <div class="card-body">
              {{post.content}}
              <p class="mt-4 fs-6">
                <a href="/post/{{post.id}}">View Comments</a>
              </p>
            </div>
          </div>
        </div>
      </div>
{{/each}}